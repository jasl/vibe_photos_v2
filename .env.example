# Database Configuration
POSTGRES_DB=ai_photos
POSTGRES_USER=photos_user
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://photos_user:change_me_in_production@localhost:5432/ai_photos

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Photo Directory Configuration
PHOTOS_DIR=/home/jasl/datasets/my_photos
THUMBNAIL_DIR=./data/thumbnails
THUMBNAIL_SIZE=400

# AI Model Configuration
MODEL_CACHE_DIR=~/.cache/ai_photos_models
DEVICE=cuda  # or 'cpu' for CPU-only mode

# Processing Configuration
DUPLICATE_THRESHOLD=8
SUPPORTED_FORMATS=jpg,jpeg,png,heic,webp,cr2,nef,dng,arw,raw

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4  # Set to 1 for 16GB GPU, 4 for DGX Spark (128GB)

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change_me_in_production_to_random_secret

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # or 'text'
